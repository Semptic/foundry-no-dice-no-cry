{
  "manifest_version": 3,
  "name": "No Dice, No Cry!",
  "version": "1.0.1",
  "description": "Stub extension for Chrome.",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["scripting", "tabs"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "No Dice, No Cry!",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
